<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <File name="MyFile" fileName="log/log4jdebug.log">
      <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
    </File>
  </Appenders>
  <Loggers>
    <Root level="all">
       <AppenderRef ref="MyFile"/>
    </Root>
  </Loggers>
</Configuration>